  script(src='//cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js')
  script(src=asset_base_path+'js/item-table.js')
  script(src=asset_base_path+'js/aws-instance-selectable.js')
  script(src=asset_base_path+'js/aws-cw-agent-install.js')
  script(src=asset_base_path+'js/aws-optimization-report.js')
  script(src=asset_base_path+'js/toolkit.js')

