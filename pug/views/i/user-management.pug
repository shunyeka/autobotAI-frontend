extends /layout/internal.pug

block title
  - var title = "User Management autobotAI - Alexa for Business skill for cloud management and DevOps operations"
  title=title

block view
  .card
    .card-header
      | User List
    .card-body
      button#show-create-user.btn.btn-primary.mb-3 Create User
      .table-container
          

block modal
  #user-modal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='user-modalLabel' aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          h5#user-modal-label.modal-title Add New User
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form#userCEForm.container-fluid(novalidate='')
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
          button#user-submit.btn.btn-primary(type='button') Save changes

block page-scripts
  script(src=asset_base_path+'js/aws-region-pref.js')
  script(src=asset_base_path+'js/datatable-lib.min.js')
  script(src='//cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js')
  script(src='//cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js')
  script(src=asset_base_path+'js/router.js')
  script(src=asset_base_path+'js/item-table.js')
  script(src=asset_base_path+'js/item-table-v2.js' type="text/javascript")
  script(src=asset_base_path+'js/constants.js')
  script(src=asset_base_path+'js/csp-accounts-table.js')  
  script(src=asset_base_path+'js/user-management.js')

block hbs-tmpls
  script#item-table-row-template(type='text/x-handlebars-template').
    <tr>
      {{#each row}}
      <td class="searchable">{{this}}</td>
      {{/each}}
      <td><a class="edit-btn btn btn-info ml-2">Edit</a><a class="disable-btn btn btn-success ml-2">Disable</a></td>
    </tr>
  script#item-table-template(type='text/x-handlebars-template').
    <table class="table table-striped table-bordered resource-table" style="width: 100%">
      <thead>
      <tr>
      <!-- <th><input type="checkbox"/></th> -->
        {{#each primaryPropertiesInOrder}}
          <th>{{this.displayName}}</th>
        {{/each}}
        <th>Actions</th>
      </tr>
      </thead>
      <tbody class="resource-table-body">
      </tbody>
    </table>