extends /layout/internal.pug

block title
  - var title = "Toolkit autobotAI - Alexa Business skill for cloud management and DevOps operations"
  title=title
  link(href='https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css' rel='stylesheet')

block view
  .card
    .card-header(data-toggle='tooltip' title='List of all the resources that require maintenance. These can be cleaned for cost saving and maintenance.')
      | Maintenance Tasks
    .card-body.table-container

block page-scripts
  script(src=asset_base_path+'js/router.js')
  script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js')
  script(src='//cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js')
  script(src='//cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.3.2/bootbox.min.js')
  script(src=asset_base_path+'js/item-table.js')
  script(src=asset_base_path+'js/maintenance-tasks.js')
  script(src=asset_base_path+'js/json2html.js')
  script(src=asset_base_path+'js/treed.js')

block hbs-tmpls
  script#item-table-row-template(type='text/x-handlebars-template').
    <tr>
      {{#each row}}
      <td class="searchable">{{this}}</td>
      {{/each}}
      <td><a class="show-more btn btn-info">More</a></td>
      <td><a class="action btn btn-success">Fix It</a></td>
    </tr>
  script#item-table-template(type='text/x-handlebars-template').
    <table class="table table-striped table-bordered resource-table" style="width: 100%">
      <thead>
      <tr>
      <!-- <th><input type="checkbox"/></th> -->
        {{#each primaryPropertiesInOrder}}
          <th>{{this.displayName}}</th>
        {{/each}}
        <th>More</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody class="resource-table-body">
      </tbody>
    </table>

block modal
  #other-details-popup.modal.fade(role='dialog')
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title More Details
          button.close(type='button' data-dismiss='modal') &times;
          
        .modal-body
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
